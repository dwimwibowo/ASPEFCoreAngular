@model IEnumerable<Product>

@{
    ViewBag.Title = "Shop";
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-gray">
            <div class="card-header">
                <h3 class="card-title">List of products</h3>
            </div>

            <div class="card-body">
                <p>Count: @Model.Count()</p>
                <ul>
                    @foreach (var p in Model)
                    {
                        <li>@p.Title</li>
                    }
                </ul>
            </div>
            <!-- /.card-body -->

            <div class="card-footer">

            </div>
            <!-- /.card-footer -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col-md-6 -->
</div>
<!-- /.row -->